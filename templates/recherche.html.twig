{% extends 'base.html.twig' %}
 {% block style %} 
            <link rel="stylesheet" href="{{ asset('css/all.css') }}" integrity="" crossorigin="anonymous">
      
{% endblock %}
{% block body %}


       
       <div class="container">
       <h2> Resultat de votre recherche </h2>
       <div class="row flex">
        {% for car in cars %}
            <div class="col-3">
              <div class="card">
                  <div class="card-body">
                   <div class="img"><img src="..." alt="..." class="img-thumbnail"></div>
                   <h5 class="card-title">
                     <a href="{{ path('car_detail', {'id':car.id}) }}"> {{car.marque}}  {{car.model}}</a>
                     </h5>
                     <p class="card-text">{{car.carburant}}</p>
                     <div class="text-primary">{{car.price}}DA</div>
                   </div>
               </div>         
            </div>
                
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
     </div>
     </div>   
    

{% endblock %}